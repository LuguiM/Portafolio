---
import { getLangFromUrl, useTranslations } from "@i18n/utils";
import { Image } from "astro:assets";

import jsIcon from "@public/icons-tech/js.svg";
import vueIcon from "@public/icons-tech/vue.svg";
import reactIcon from "@public/icons-tech/react.svg";
import astroIcon from "@public/icons-tech/astro.svg";
import laravelIcon from "@public/icons-tech/laravel.svg";
import vuetifyIcon from "@public/icons-tech/vuetify.svg";
import primevueIcon from "@public/icons-tech/primevue.svg";
import bootstrapIcon from "@public/icons-tech/bootstrap.svg";
import tailwindIcon from "@public/icons-tech/tailwind.svg";
import figmaIcon from "@public/icons-tech/figma.svg";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const techs = [
    { name: "js", icon: jsIcon },
    { name: "vue", icon: vueIcon },
    { name: "react", icon: reactIcon },
    { name: "astro", icon: astroIcon },
    { name: "laravel", icon: laravelIcon },
    { name: "vuetify", icon: vuetifyIcon },
    { name: "primevue", icon: primevueIcon },
    { name: "bootstrap", icon: bootstrapIcon },
    { name: "tailwind", icon: tailwindIcon },
    { name: "figma", icon: figmaIcon },
];
---

<div class="section-spacing" id="technologies">
    <h4 class="text-h4 text-primary dark:text-accent">{t("Tech.title")}</h4>

    <div class="flex flex-wrap gap-14 justify-center mt-4">
        {
            techs.map((tech) => (
                <div class="tooltip !tooltip-bottom" data-tip={tech.name}>
                    <div class="tech-card-container">
                        <Image
                            src={tech.icon}
                            alt={tech.name}
                            width={50}
                            height={50}
                            class="w-[50px] h-[50px]"
                        />
                    </div>
                </div>
            ))
        }
    </div>
</div>

<style></style>
