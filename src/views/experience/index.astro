---
import { getLangFromUrl, useTranslations } from "@i18n/utils";

const lang = getLangFromUrl(Astro.url);

const t = useTranslations(lang);

const experience = () => {
  const totalItems = 3;
  return Array.from({ length: totalItems }, (_, i) => totalItems - i);
};


---

<div class="flex flex-col gap-6 section-spacing">
    <h3 class="text-h4 text-primary dark:text-accent">{t("experience.workExperience")}</h3>
    {
        experience().map((exp) => {
            return (
                <div class="collapse collapse-arrow rounded-lg bg-base-100 border border-base-300  dark:border-accent">
                    <input type="radio" name={`my-accordion`} />
                    <div class="collapse-title font-semibold flex flex-col">
                        <h6 class="text-bodyLarge !font-bold">
                            {t(`experience.experience${exp}.title`)} - {t(`experience.experience${exp}.company`)}
                        </h6>

                        <span class="text-bodyRegular text-gray-500 dark:text-gray-400">
                            {t(`experience.experience${exp}.date`)}
                        </span>
                    </div>
                    <div class="collapse-content text-sm">
                        <p class="text-paragraph text-secondary dark:text-gray">
                            {t(`experience.experience${exp}.description`)}
                        </p>
                    </div>
                </div>
            );
        })
    }
</div>

