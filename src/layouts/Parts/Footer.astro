---
const linkedin = import.meta.env.LINK_LINKEDIN;
const github = import.meta.env.LINK_GITHUB;
---

<footer
    class="footer sm:footer-horizontal bg-neutral text-neutral-content items-center p-4 border-t-1"
>
    <aside class="grid-flow-col items-center">
        <p class="text-bodyRegular">
            © {new Date().getFullYear()} - <span
                class="text-bodyLarge text-primary dark:text-aqua"
                >Luis Muñoz</span>
        </p>
    </aside>
    <nav
        class="grid-flow-col gap-4 md:place-self-center md:justify-self-end text-bodyLarge"
    >
        <a href={github} target="_blank">
            GitHub
        </a>
        <a href={linkedin} target="_blank">
            LinkedIn
        </a>
    </nav>
</footer>

