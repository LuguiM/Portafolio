---
import { getLangFromUrl, useTranslations } from "@i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const portfolio = import.meta.env.LINK_PORTAFOLIO;

---

<meta name="description" content={t("head.description")} />
<!-- Open Graph tags -->
<meta property="og:title" content={t("head.title")} />
<meta property="og:type" content="website" />
<meta property="og:url" content={portfolio} />
<meta property="og:description"  content={t("head.description")} />
<meta property="og:image" content="@assets/profile-photo.png">
<meta property="og:image:alt" content="">