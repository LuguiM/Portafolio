---
import Icon from "../../components/icon.astro";
---

<button type="button" id="theme-selector">
  <span class="sr-only">
    Enable
    <span class="dark:hidden">light</span>
    <span class="hidden dark:inline">dark</span>
    mode
  </span>

  <Icon icon="sun" className="hidden dark:inline" color="#efefef" />

  <Icon icon="moon" className="dark:hidden" color='#215373' />
</button>

<script>
  document.getElementById("theme-selector")?.addEventListener("click", () => {
    if (localStorage.theme === "dark") {
      localStorage.theme = "light";
      document.documentElement.classList.remove("dark");
    } else {
      localStorage.theme = "dark";
      document.documentElement.classList.add("dark");
    }
  });
</script>
